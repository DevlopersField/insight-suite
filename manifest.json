{
    "manifest_version": 3,
    "name": "Dev Buddy",
    "version": "1.0.0",
    "description": "Professional SEO & Technical audit companion for developers.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/icon.svg"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "128": "icons/icon.svg"
    }
}